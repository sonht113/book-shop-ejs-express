<div class="login-register mt-4">
	<div class="m-auto">
	<h2 class="active-form"> sign in </h2>
	</div>
	<form class="form-group mt-4" id="form-sign-in" method="POST" action="/login">
		<label for="email">Email</label>
		<input type="text" class="text" name="email" placeholder="Enter the email">
		<label for="password">Password</label>
		<input type="password" class="text" name="password" placeholder="Enter the password">
		<input type="checkbox" id="checkbox-1-1" class="custom-checkbox" />
		<label for="checkbox-1-1" class="small"> Keep me Signed in</label>
		<button class="signin mb-2" >
			<a href="/profile" class="text-light">Sign in</a>
		</button>
		<p class="small" style="display: inline;">Do you have a account? <a href="/register" class="small" style="display:inline">Signup here...</a></p>
		<hr>
		<a href="#">Forgot Password?</a>
	</form>
</div>
